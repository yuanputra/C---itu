using namespace std;
int i,k,j;

void main()
{
	int mat1[3][3];
	int mat2[3][3];


	for (i=0;i<3;i++)
		{
			for (j=0;j<3;j++)
			{
				cout<<"masukan mat1 : ";
			cin>>mat1[i][j];
		}	
	cout<<endl;
	}
	for (i=0;i<3;i++)
		{for (j=0;j<3;j++)
			{
				cout<<"masukan mat2 : ";
			cin>>mat2[i][j];
		}
	cout<<endl;
	}

	for (i=0;i<3;i++)
		for (j=0;j<3;j++)
			{
				
			mat1[i][j]=mat2[i][j]+mat1[i][j];

		}

cout<<"hasil :"<<endl<<endl;
		for (i=0;i<3;i++)
		{for (j=0;j<3;j++)
			{
			cout<<mat1[i][j];
		}
